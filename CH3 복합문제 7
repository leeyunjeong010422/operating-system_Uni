#include <stdio.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <unistd.h>

int main() {
        pid_t pid;
        pid = fork(); // 자식 프로세스 생성
        if (pid > 0) { // 부모 프로세스 코드
                wait(NULL); // 자식프로세스가 종료할 때까지 대기
                return 0;
        }
        else if(pid == 0) {
                printf("자식 프로세스: fork()의 리턴 값 pid =  %d\n", pid);
                printf("자식 프로세스: pid = %d, 부모 프로세스 pid = %d\n", getpid(), getppid());
                int sum = 0;
        for (int i = 1; i <= 10; i++) {
                sum += i;
        }
        printf("1에서10까지 합한 결과는 %d\n",sum);
        return 0;
        }
        else {
                printf("fork 오류");
                return 0;
                }
        }
